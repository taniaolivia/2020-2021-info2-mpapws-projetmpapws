{% extends 'base.html.twig' %}

{% block title %}Bon&Local{% endblock %}

{% block body %}
<div class="header">
    <div class="navigation_bar1">
        <nav class="navbar navbar-expand-lg navbar-light">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" id="nav1" href="{{ path("connexion_compte") }}"><img src=" {{ asset ('images/compte.png')}}" class="compte">
                        Compte<span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" id="nav1" href="{{ path("commander") }}"><img src=" {{ asset ('images/panier.png')}}" class="panier">
                        Panier <span class="sr-only"></span></a>
                    </li>
                </ul>
        </nav>
    </div>
    <a href="{{ path("accueil")}}"><img src=" {{ asset ('images/logo.png')}}" class="logo"></a>
</div>

<div class="navigation_bar2">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" id= "accueil" href="{{ path("accueil")}}"><img src=" {{ asset ('images/accueil.png')}}" class="accueil">
                    </a>
                </li>
            </ul>

         <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Recherche des produits..." aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="search" href="{{ path("consultation_produit") }}"><img src=" {{ asset ('images/search.png')}}" class="search">    </button>
         </form>
    </nav>
</div>

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" >
            <div class="carousel-item active">
                <img class="d-block" src=" {{ asset ('images/legume.jpg')}}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block"   src=" {{ asset ('images/legumes-bio.jpg')}}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block" src=" {{ asset ('images/fruits.jpg')}}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container2">
    <div class="card">
        <img class="card-img-top" src=" {{ asset ('images/fruitss.jpg')}}" alt="Nos produits">
            <h1>Nos produits</h1>
            <p><a href="{{ path("consultation_produit") }}"><button>Découverte</button></a></p>
    </div>

    <div class="card">
        <img class="card-img-top" src=" {{ asset ('images/partenaire.png')}}" alt="Nos partenaires">
            <h1>Nos partenaires</h1>
            <p><a href="{{ path("liste_partenaires") }}"><button>Découverte</button></a></p>
    </div>

    <div class="card">
        <img class="card-img-top" src=" {{ asset ('images/location.png')}}" alt="Proche de chez moi">
            <h1>Proche de chez moi</h1>
            <p><a href="{{ path("liste_magasins") }}"><button href="{{ path("liste_magasins") }}">Découverte</button></a></p>
    </div>
</div>

<div class = "footer">
    {% block footer %}
         <h5 class="text-uppercase">@2020 Bon&Local</h5>
    {% endblock %}
</div>


<style>
    <!-- STYLE PAGE DACCUEIL -->
