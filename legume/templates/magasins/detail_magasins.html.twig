        }

        .card button:hover {
            opacity: 0.7;
        }

        .container2
        {
            margin-top: 5%;
            margin-right: auto;
            margin-left: auto;
            position: absolute;
        }

        @media (min-width: 500px) and (max-width: 767.98px)
        {
            .navigation_bar1
            {
                transition: 0.3s;
            }

            .footer {
                display: block;
                width: 100%;
                text-align: center;
                position: fixed;
            }
            .card{
                display: flex;
                flex-direction: column;
                margin-left: auto;
                margin-right: auto;
                margin-bottom: 200px;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 400px;
                max-height: 390px;
            }

            .card button {
                border: none;
                outline: 0;
                padding: 12px;
                color: white;
