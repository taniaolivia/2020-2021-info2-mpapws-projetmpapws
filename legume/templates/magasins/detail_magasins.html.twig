{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur la page d'accueil!{% endblock %}

{% block body %}
    <div class="header">
        <div class="navigation_bar1">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" id="nav1" href="{{ path("espace_client") }}"><img src="{{ asset('images/compte.png') }}" class="compte">
                                Compte<span class="sr-only"></span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" id="nav1" href="{{ path("commander") }}"><img src="{{ asset('images/panier.png') }}" class="panier">
                                Panier <span class="sr-only"></span></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <a href="{{ path("accueil")}}"><img src="{{ asset('images/logo.png') }}" class="logo"></a>
    </div>

    <div class="navigation_bar2">
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" id= "accueil" href="{{ path("accueil")}}"><img src="{{ asset('images/accueil.png') }}" class="accueil">
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id= "nav2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="{{ asset('images/fruits-legumes.png') }}" class="fruits"> Fruits et LÃ©gumes
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" id= "nav2" href="{{ path("consultation_produit")}}">Nos produits</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" id= "nav2" href="{{ path("liste_magasins")}}">Proche de chez moi</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id= "nav2" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="{{ asset('images/bio.png') }}" class="bio"> Bio et Ecologie
                        </a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Recherche des produits..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="search" href="{{ path("consultation_produit") }}"><img src="{{ asset('images/search.png') }}" class="search">    </button>
                </form>
            </div>
        </nav>
    </div>

    <div class="container2">
        <div class="card">
            <img class="card-img-left" src=" {{ asset ('images/fruitss.jpg')}}" alt="Julie Fruits">
            <ul>
                {% for magasins in MagasinChoisi %}
                    <h1>Nom : {{ magasins.nom }}</h1>
                    <h3>Vendeur : {{ magasins.vendeur }}</h3>
                    <h3>Type de produit vendu : {{ magasins.type_produit_vendu }}</h3>
                    <h3>Adresse : {{ magasins.adresse }}</h3>
                    <h3>Horaires : {{ magasins.horaires }}</h3>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class = "footer">
        {% block footer %}
            <h5 class="text-uppercase">@2020 Bon&Local</h5>
        {% endblock %}
    </div>

    <style>
        <!-- STYLE DE BASE -->
        body{
            position: relative;
            background-color: antiquewhite;
        }
        html
        {
            background-color: antiquewhite;
            font-family: "Avenir Next";
        }
        .header
        {
            background-color: #333;
        }
        .logo
        {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 125px;
            height: 100px;
        }

        .navigation_bar2
        {
            margin-bottom: -45px;
            transition: 0.3s;
        }
        .navigation_bar1
        {
            float: right;
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: -250px;
            transition: 0.3s;
        }
        #nav2
        {
            color: white;
            text-align: center;
        }
        #nav1
        {
            color: white;
        }
        .compte
        {
            width: 30px;
            height: 30px;
        }
        .panier
        {
            width: 30px;
            height: 30px;
        }
        .dropdown-menu
        {
            background-color: #333;
        }
        .dropdown-menu a:hover
        {
            background-color: black;
        }
        .navigation_bar1 a:hover
        {
            background-color: mediumpurple;
        }
        .navigation_bar2 a:hover
        {
            background-color: mediumpurple;
            color: black;
        }
        .fruits
        {
            margin-bottom: auto;
            margin-top: auto;
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }
        .search
        {
            width: 30px;
            height: 25px;
        }
        .accueil
        {
            width: 40px;
            height: 40px;
        }
        #accueil
        {
            padding: 15px;
        }
        .bio
        {
            margin-top: 0.5px;
            margin-bottom: 0.5px;
            width: 50px;
            height: 50px;
            margin-right: 5px;
        }

        #search
        {
            margin-top: 10px;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            max-height: 350px;
            text-align: center;
            font-family: "Avenir Next";
            margin-top: 30px;
            margin-right: auto;
            margin-left: auto;
            display: inline-block;
        }

        .card button {
            border: none;
