                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }
            .card-img-top
            {
                width: 100%;
                margin-bottom: 50px;
            }
            h1{
                margin-top: -20px;
                margin-bottom: 40px;
                font-size: 150%;
            }

            form{
                width: 50%;
            }
            #search{
                right: 0;
            }

            #nav1{
                margin-top: -20px;
                margin-bottom: 10px;
            }
        }

        @media (min-width: 768px)
        {
            .card-img-top
            {
                width: 300px;
                height : 200px;
                margin-bottom: 50px;
            }
            .card{
                margin-bottom: 200px;
                margin-left: 80px;
            }
            h1{
                margin-top: -20px;
                margin-bottom: 40px;
                font-size: 150%;
            }

        }
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #333;
            color: white;
            text-align: center;
        }
    </style>
{% endblock %}
